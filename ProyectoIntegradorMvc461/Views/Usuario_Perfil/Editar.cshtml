@model ProyectoIntegradorMvc461.Models.Usuario_Perfil

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> Items = (List<SelectListItem>)ViewBag.ItemsEstado;

    List<SelectListItem> ItemsUsuario = (List<SelectListItem>)ViewBag.ItemsUsuario;
    List<SelectListItem> ItemsPerfil = (List<SelectListItem>)ViewBag.ItemsPerfil;
}


<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Usuario/Empresa</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @*@Html.LabelFor(model => model.id_perfil, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <label class="control-label col-md-2">Id</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.id_usuario_perfil, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.id_usuario_perfil, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Usuario</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.id_usuario, new SelectList(ItemsUsuario, "Value", "Text"),
                "Select", new { @class = "form-control", onchange = "selected()", id = "cbo_usuario" })
                @Html.ValidationMessageFor(model => model.id_usuario, "", new { @class = "text-danger" })
                <span asp-validation-for="cbo_usuario" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Perfil</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.id_perfil, new SelectList(ItemsPerfil, "Value", "Text"),
                "Select", new { @class = "form-control", onchange = "selected()", id = "cbo_perfil" })
                @Html.ValidationMessageFor(model => model.id_perfil, "", new { @class = "text-danger" })
                <span asp-validation-for="cbo_perfil" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Estado</label>
            <div class="col-md-10">
                @*fee_earner*@
                @Html.DropDownListFor(model => model.f_estado, new SelectList(Items, "Value", "Text"),
                "Select", new { @class = "form-control", onchange = "selected()", id = "cbo_estado" })
                @Html.ValidationMessageFor(model => model.f_estado, "", new { @class = "text-danger" })
                <span asp-validation-for="cbo_estado" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Grabar" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Usuario_Perfil")'">Regresar a la Lista</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
